@model IEnumerable<VendedoresWebMvc.Models.RegistrosDeVendas>
@{
    ViewData["Title"] = "Período";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Data Mínima</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Data Máxima</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
    </div>
</nav>
    <h4 class="panel-title">Total de Vendas R$@Model.Sum(obj => obj.ValorDaVenda).ToString("N2")</h4>
    <table class="table table-striped table-hover ">
        <thead>
            <tr class="success bg-primary">
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.DataDaVenda)
                </th>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.Vendedor)
                </th>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.Vendedor.Departamento)
                </th>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.ValorDaVenda)
                </th>
                <th class="text-white">
                    @Html.DisplayNameFor(model => model.StatusDaVenda)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataDaVenda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vendedor.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vendedor.Departamento.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorDaVenda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusDaVenda)
                    </td>
                </tr>
            }
        </tbody>
    </table>

